<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/adapter_main_row_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/layout_vertical_padding"
	android:paddingBottom="@dimen/layout_vertical_padding">

	<ImageButton
		android:id="@+id/btn_deck_play"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/btn_adapter_row_padding"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_play_circle"
		android:focusable="false"

		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/text_deck_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/text_name_vertical_padding"
		android:text="Stack Name"
		android:textColor="@android:color/black"
		android:textSize="@dimen/text_name_text_size"

		app:layout_constraintStart_toEndOf="@id/btn_deck_play" />

	<TextView
		android:id="@+id/text_deck_num_cards"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif-light"
		android:text="6 flashcards"
		android:textSize="@dimen/text_num_cards_text_size"

		app:layout_constraintStart_toEndOf="@id/btn_deck_play"
		app:layout_constraintTop_toBottomOf="@id/text_deck_name" />

	<ImageButton
		android:id="@+id/btn_deck_settings"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/btn_adapter_row_padding"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_settings"
		android:focusable="false"

		app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>