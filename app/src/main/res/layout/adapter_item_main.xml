<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/adapter_main_row_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="5dp"
	android:paddingBottom="5dp">

	<ImageButton
		android:id="@+id/btn_stack_play"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_play_circle"

		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/text_stack_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:text="Stack Name"
		android:textColor="@android:color/black"
		android:textSize="17sp"

		app:layout_constraintStart_toEndOf="@id/btn_stack_play" />

	<TextView
		android:id="@+id/text_stack_num_cards"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif-light"
		android:text="6 flashcards"
		android:textSize="15sp"

		app:layout_constraintStart_toEndOf="@id/btn_stack_play"
		app:layout_constraintTop_toBottomOf="@id/text_stack_name" />

	<ImageButton
		android:id="@+id/btn_stack_settings"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_settings"

		app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>