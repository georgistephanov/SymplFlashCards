<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:fitsSystemWindows="true">

	<include layout="@layout/toolbar_deck" />

	<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="40dp"
		android:layout_marginBottom="40dp"
		tools:context="com.georgistephanov.android.symplflashcards.ui.deck.DeckActivity">


		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:onClick="onCardClick">

			<include layout="@layout/card_back" android:id="@+id/card_back" />

			<include layout="@layout/card_front" android:id="@+id/card_front" />

		</FrameLayout>


	</android.support.constraint.ConstraintLayout>

</LinearLayout>